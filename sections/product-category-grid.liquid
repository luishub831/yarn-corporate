{%- liquid
  assign options = section.settings
  assign color_scheme = options.color_scheme
  assign container_size = options.container_size
  assign title = options.title
  assign blocks = section.blocks
-%}

<div class="product-category-grid section-{{ section.id }} color-{{ color_scheme }}">
  <div class="product-category-grid__container container container--{{ container_size }}">
    {%- if title != blank -%}
      <h2 class="product-category-grid__main-title">{{ title }}</h2>
    {%- endif -%}
    
    <div class="product-category-grid__wrapper">
      {%- for block in blocks -%}
        {%- liquid
          assign category_title = block.settings.category_title
          assign category_image = block.settings.category_image
          assign category_link = block.settings.category_link
          assign items = block.settings.items
        -%}
        
        <div class="product-category-grid__category" {{ block.shopify_attributes }}>
          <h3 class="product-category-grid__category-title">{{ category_title }}</h3>
          
          <div class="product-category-grid__items">
            {%- for i in (1..6) -%}
              {%- liquid
                assign show_key = 'item_' | append: i | append: '_show'
                assign image_key = 'item_' | append: i | append: '_image'
                assign text_key = 'item_' | append: i | append: '_text'
                assign link_key = 'item_' | append: i | append: '_link'
                
                assign show_item = block.settings[show_key]
                assign item_image = block.settings[image_key]
                assign item_text = block.settings[text_key]
                assign item_link = block.settings[link_key]
              -%}
              
              {%- if show_item and item_image != blank -%}
                <a href="{{ item_link }}" class="product-category-grid__item">
                  <div class="product-category-grid__item-image-wrapper">
                    <img
                      src="{{ item_image | image_url: width: 300 }}"
                      srcset="{{ item_image | image_url: width: 150 }} 150w,
                              {{ item_image | image_url: width: 300 }} 300w,
                              {{ item_image | image_url: width: 400 }} 400w"
                      sizes="(max-width: 768px) 150px, 200px"
                      alt="{{ item_text | escape }}"
                      loading="lazy"
                      class="product-category-grid__item-image"
                    >
                  </div>
                  <p class="product-category-grid__item-text">{{ item_text }}</p>
                </a>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .product-category-grid {
    padding: 4rem 0;
  }

  .product-category-grid__container {
    margin: 0 auto;
    padding: 0 2rem;
  }

  .product-category-grid__main-title {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
  }

  .product-category-grid__wrapper {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 2rem;
    align-items: stretch;
  }

  .product-category-grid__category {
    background: #F8F8F8;
    border-radius: 8px;
    padding: 5rem 3rem;
    display: flex;
    flex-direction: column;
    height: 100%;
    border: 1px solid var(--BORDER, #E4E4E4);
  }



  .product-category-grid__category-title {
    font-size: 1.8rem;
    font-weight: 700;
    text-align: center;
    margin: 0 0 2rem 0;
    min-height: 2rem;
  }

  .product-category-grid__items {
    display: flex;
    flex-wrap: nowrap;
    gap: 2rem;
    justify-content: center;
    align-items: flex-start;
  }

  .product-category-grid__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
    flex: 1 1 0;
    min-width: 0;
  }

  .product-category-grid__item:hover {
    transform: translateY(-4px);
  }

  .product-category-grid__item-image-wrapper {
    width: 85%;
    aspect-ratio: 1;
    border-radius: 50%;
    overflow: hidden;
    background: #e0e0e0;
    margin-bottom: 0.75rem;
  }

  .product-category-grid__item-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-category-grid__item-text {
    font-size: 1.4rem;
    font-weight: 700;
    text-align: center;
    margin: 0;
    line-height: 1.3;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .product-category-grid {
      padding: 2rem 0;
    }

    .product-category-grid__container {
      padding: 0 1rem;
    }

    .product-category-grid__main-title {
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }

    .product-category-grid__wrapper {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .product-category-grid__category {
      padding: 3rem 2rem;
    }

    

    .product-category-grid__items {
      flex-wrap: wrap;
      gap: 3rem 1rem;
    }

    .product-category-grid__item {
      flex: 0 0 calc(50% - 0.5rem);
    }

  }
</style>

